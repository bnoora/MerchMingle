extends layout

block content
    h1 Category: #{category.name}

    p Description: #{category.description}

    if items.length
        p Items in this category:

        ul
            each item in items
                li
                    a(href='/inventory/item/' + item._id)= item.name
    else
        p No items in this category yet.
    hr
    p
        a(href=category.url + '/update') Update Category
    p
        a(href=category.url + '/delete') Delete Category


